# Telegram Bot Token
# Get this from @BotFather on Telegram
TELEGRAM_TOKEN=your_bot_token_here

# Optional: Chat ID for scheduled sending
# Get your chat ID by sending a message to the bot and checking logs
TELEGRAM_CHAT_ID=

# Hugging Face API Token (FREE tier)
# Get from https://huggingface.co/settings/tokens
# Create a READ access token (not write)
# Leave blank to use fallback passages only
HF_API_TOKEN=
HF_TOKEN=

# Optional: Override the LLM model (default: mistralai/Mistral-7B-Instruct-v0.2)
# HF_MODEL=NousResearch/Nous-Hermes-2-Mistral-7B-DPO

# Debug mode (True/False)
DEBUG_MODE=False

# Timezone for scheduled sending (IANA format)
# Examples: UTC, America/New_York, Europe/London, Asia/Kolkata
TIMEZONE=UTC

# Daily send time (HH:MM format in specified timezone)
DAILY_SEND_TIME=08:00

# Admin User IDs (comma-separated for multiple admins)
# Get your user ID by sending /start to the bot and checking logs
# Example: ADMIN_USER_IDS=123456789,987654321
ADMIN_USER_IDS=
